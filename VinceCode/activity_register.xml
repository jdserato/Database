<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.danielle98.hogwartsdata.Register">

    <TextView
        android:fontFamily="cursive"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Wizard Registry"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="29dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:fontFamily="cursive"
        android:layout_width="306dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:id="@+id/etName"
        android:textColor="@color/white"
        android:hint="Wizard Name"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteY="190dp"
        tools:layout_editor_absoluteX="39dp"
        android:layout_above="@+id/etPass"
        android:layout_alignEnd="@+id/etPass" />


    <EditText
        android:fontFamily="cursive"
        android:textColor="@color/white"
        android:id="@+id/etPass"
        android:layout_width="305dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:singleLine="true"
        tools:layout_editor_absoluteY="250dp"
        tools:layout_editor_absoluteX="40dp"
        android:layout_above="@+id/etconPass"
        android:layout_centerHorizontal="true" />

    <EditText
        android:fontFamily="cursive"
        android:textColor="@color/white"
        android:id="@+id/etconPass"
        android:layout_width="305dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:textColorHint="@color/white"
        android:singleLine="true"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/etHouse"
        android:layout_alignStart="@+id/etPass" />



    <Button
        android:fontFamily="cursive"
        android:id="@+id/btnReg"
        android:layout_width="201dp"
        android:layout_height="50dp"
        android:text="Register"
        android:onClick="register"
        android:background="@color/black"
        android:textColor="@color/white"
        tools:layout_editor_absoluteY="312dp"
        tools:layout_editor_absoluteX="92dp"
        android:layout_above="@+id/tvLogin"
        android:layout_centerHorizontal="true" />


    <TextView
        android:fontFamily="cursive"
        android:layout_width="116dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="back to login"
        android:id="@+id/tvLogin"
        android:textColor="@color/white"
        tools:layout_editor_absoluteY="374dp"
        tools:layout_editor_absoluteX="143dp"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:fontFamily="cursive"
        android:id="@+id/etHouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/btnReg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:fontFamily="cursive"
        android:textColor="@color/red"
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etName"
        android:layout_alignStart="@+id/etPass"
        android:text=""
        android:visibility="invisible"/>

</RelativeLayout>